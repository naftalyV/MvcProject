@model MvcProject.Models.Product
@*@model List<MvcProject.Models.Product>*@

@{
    ViewBag.Title = "MoreDedails";
}

<h2>פרטים נוספים</h2>

<div>
    <hr />
    <dl class="dl-horizontal">


        <dt>
            @Html.DisplayName("פרטי המוצר")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>



        <dd>
            @Html.DisplayFor(model => model.ShortDescription)
        </dd>




        <dt>
            @Html.DisplayName("תאריך פרסום")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>


        <dt>
            @Html.DisplayName("מחיר")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)$
        </dd>



        <dd>
            @if (Model.picture1 != null)
            {

                <img style="width:200px" ;
                     src='@Url.Action("ShowInHomePage", "Home", new { id = Model.Id })' />
            }
            @if (Model.picture2 != null)
            {
                <img style="width:200px" ;
                     src='@Url.Action("ShowPicture2", "Home", new { id = Model.Id })' />

            }
            @if (Model.picture3 != null)
            {
                <img style="width:200px" ;
                     src='@Url.Action("ShowPicture3", "Home", new { id = Model.Id })' />

            }

        </dd>

        <dd>
            @Html.DisplayFor(model => model.LongDescription)
        </dd>
    </dl>
</div>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            
            @Html.DisplayName("פרטי המפרסם")<br />
        </dt>
        
        <dd>
                @Html.DisplayFor(model => model.Owner.UserName)


            </dd>
        <dt>
            @Html.DisplayName("דואר אלקטרוני")
        </dt>
            <dd>
                @Html.DisplayFor(model => model.Owner.Email)
            </dd>
        <dt>
            @Html.DisplayName("שנת לידה")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Owner.BirthDate)
        </dd>
    </dl>
</div>





<p>
@if (User.Identity.IsAuthenticated && Model.Status == MvcProject.Models.State.ForSale)
{
    @Html.ActionLink("הוסף לסל", "AddToShopingCard", "ShopingCart", new { id = Model.Id }, string.Empty)<br />
}
@Html.ActionLink("דף הבית", "HomePage", "Home")
</p>
